<VirtualHost *:80>
    ServerName hello.loc
    DocumentRoot /var/www/hello.loc

    WSGIDaemonProcess hello.loc python-home=/path/to/virtualenv
    WSGIProcessGroup hello.loc

    Alias /static/ /var/www/hello.loc/static/
    <Directory /var/www/hello.loc/static>
        Require all granted
    </Directory>

    <Directory /var/www/hello.loc/hello>
        <Files wsgi.py>
            Require all granted
        </Files>
    </Directory>

    WSGIScriptAlias / /var/www/hello.loc/hello/wsgi.py

    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
